<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_gantt.action_project_report" model="ir.actions.report">
        <field name="name">Project Print</field>
        <field name="model">project.project</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">project_gantt.report_project_report</field>
        <field name="report_file">project_gantt.report_project_report</field>
        <field name="binding_model_id" ref="model_project_project"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_project_report">
        <t t-call="web.html_container">
            <t t-call="project_gantt.custom_header_footer">
                <div class="page">
                    <h2 class="text-center">Project Report</h2>
                    <t t-if="len(docs.ids) > 1">
                        <h2 class="text-center">Please select one project simultaneously</h2>
                    </t>
                    <t t-if="len(docs.ids) == 1">
                        <t t-foreach="docs" t-as="project">
                            <div class="row col-12" style="height:auto;">
                                <div class="col-7">
                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">Project Name:</span>
                                        <span t-field="project.name" class="ps-2"></span>
                                    </div>

                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">Project Stage:</span>
                                        <span t-field="project.stage_id" class="ps-2"></span>
                                    </div>

                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">Project Progress:</span>
                                        <span t-esc="round(project.project_progress)" class="ps-2"></span>
                                    </div>
                                    <div class="border border-2 border-bottom-0" rowspan="3" style="padding:2px;">
                                        <span class="">Total Tasks:</span>
                                        <span t-esc="project.get_task_count()" class="ps-2"></span>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">Project Manager:</span>
                                        <span t-field="project.user_id" class="ps-2"></span>
                                    </div>
                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">Customer:</span>
                                        <span t-field="project.partner_id" class="ps-2"></span>
                                    </div>
                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">Start Date:</span>
                                        <span t-field="project.date_start" class="ps-2"></span>
                                    </div>
                                    <div class="border border-2 border-bottom-0" style="padding:2px;">
                                        <span class="">End Date:</span>
                                        <span t-field="project.date" class="ps-2"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row col-12 border border-2" style="height:auto; padding:2px;">
                                <t t-foreach="project.count_task_stages().items()" t-as="stage_count">
                                    <span class="me-3">
                                        <span><t t-esc="stage_count[0]"/>:
                                        </span>
                                        <span class="ps-1"><t t-esc="stage_count[1]"/>,
                                        </span>
                                    </span>
                                </t>
                            </div>

                            <div class="mt-3 col-12">
                                <h4>Tasks for the
                                    <t t-esc="project.name"/>
                                </h4>
                                <div class="row">
                                    <div class="col-12">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th class="text-start align-middle">
                                                        <span>No.</span>
                                                    </th>
                                                    <th class="text-start align-middle">
                                                        <span>Task Name</span>
                                                    </th>
                                                    <th class="text-start align-middle">
                                                        <span>Assignees</span>
                                                    </th>
                                                    <th class="text-start align-middle">
                                                        <span>Duration</span>
                                                    </th>
                                                    <th class="text-end">
                                                        <span>Stage</span>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-set="project_task" t-value="project.get_all_task_report()"/>
                                                <tr t-foreach="project_task" t-as="task"
                                                    t-att-style="'background-color: #F1F1F1;' if task_index % 2 == 0 else ''">

                                                    <td class="align-middle">
                                                        <span t-esc="task_index + 1"/>
                                                    </td>
                                                    <td class="align-middle">
                                                        <span t-esc="task['name']"></span>
                                                    </td>
                                                    <td class="align-middle">
                                                        <span t-esc="task['assignees']"></span>
                                                    </td>
                                                    <td class="align-middle">
                                                        <span t-esc="task['duration']"></span>
                                                    </td>
                                                    <td class="align-middle">
                                                        <span t-esc="task['stage']"></span>
                                                    </td>

                                                </tr>
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>

                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
